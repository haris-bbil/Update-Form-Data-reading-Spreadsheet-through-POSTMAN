	"item": [
		{
			"name": "get item",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"id": "11095540-29f8-44fc-afbb-5d1979a33073",
						"exec": [
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "21d01f23-581e-48f5-a7c9-f3a630a923a3",
						"exec": [
							"const response = pm.response.json();",
							"if (response.data && response.data.length > 0) {",
							"    const id = response.data[0].id;",
							"    pm.environment.set(\"id\", id);",
							"    pm.variables.set(\"update_required\", true); // Set flag for the next request",
							"} else {",
							"    console.warn(`No ID found for stock_no: ${pm.variables.get(\"stock_no\")}`);",
							"    pm.environment.set(\"id\", \"\"); // Clear ID",
							"    pm.variables.set(\"update_required\", false); // Skip the next request",
							"    ",
							"    // Log the stock_no to a collection variable for tracking",
							"    const failedStockNos = pm.collectionVariables.get(\"failed_stock_nos\") || [];",
							"    failedStockNos.push(pm.variables.get(\"stock_no\"));",
							"    pm.collectionVariables.set(\"failed_stock_nos\", failedStockNos);",
							"",
							"    // Stop execution of the next request",
							"    postman.setNextRequest(null);",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"id": "6909601-9cf58115-bd11-4ef9-adfe-4a08f67c617c",
			"protocolProfileBehavior": {
				"disabledSystemHeaders": {
					"accept": true,
					"accept-encoding": true
				},
				"disableBodyPruning": true
			},
			"request": {
