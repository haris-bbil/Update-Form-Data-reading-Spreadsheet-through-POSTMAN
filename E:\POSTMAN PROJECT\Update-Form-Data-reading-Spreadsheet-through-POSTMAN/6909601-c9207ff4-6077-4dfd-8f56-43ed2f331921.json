							"pm.test(\"Check Required Field Validation\", function () {\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.environment.set(\"token_type\", jsonData.token_type);\r",
							"    pm.environment.set(\"access_token\", jsonData.access_token);\r",
							"    pm.expect(jsonData.errors.client_id[0]).to.eql(\"The client id field is required.\");\r",
							"    pm.expect(jsonData.errors.client_secret[0]).to.eql(\"The client secret field is required.\");\r",
							"    pm.expect(jsonData.errors.grant_type[0]).to.eql(\"The grant type field is required.\");\r",
